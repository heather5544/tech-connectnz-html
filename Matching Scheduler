    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab switching functionality
            const tabs = document.querySelectorAll('.tab');
            const tabContents = document.querySelectorAll('.tab-content');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');
                    
                    // Remove active class from all tabs and tab contents
                    tabs.forEach(t => t.classList.remove('active'));
                    tabContents.forEach(tc => tc.classList.remove('active'));
                    
                    // Add active class to clicked tab and corresponding content
                    this.classList.add('active');
                    document.getElementById(`${tabId}-tab`).classList.add('active');
                });
            });
            
            // Calendar day selection
            const calendarDays = document.querySelectorAll('.calendar-day');
            calendarDays.forEach(day => {
                day.addEventListener('click', function() {
                    if (!this.classList.contains('other-month')) {
                        calendarDays.forEach(d => d.classList.remove('selected'));
                        this.classList.add('selected');
                        
                        // Update the date header with the selected date
                        // This would typically use actual date calculation in a real implementation
                        const dateHeader = document.querySelector('.date-header');
                        const month = document.querySelector('.current-month').textContent;
                        dateHeader.textContent = `Tuesday, April ${this.textContent}, 2025`;
                    }
                });
            });
            
            // Time slot selection
            const timeSlots = document.querySelectorAll('.time-slot:not(.booked)');
            timeSlots.forEach(slot => {
                slot.addEventListener('click', function() {
                    timeSlots.forEach(s => s.classList.remove('selected'));
                    this.classList.add('selected');
                });
            });
            
            // Modal functionality
            const modal = document.getElementById('create-meeting-modal');
            const createMeetingBtn = document.getElementById('create-meeting-btn');
            const closeModalBtn = document.getElementById('close-modal-btn');
            const cancelMeetingBtn = document.getElementById('cancel-meeting-btn');
            const scheduleMeetingBtn = document.getElementById('schedule-meeting-btn');
            
            createMeetingBtn.addEventListener('click', function() {
                modal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            });
            
            function closeModal() {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
            
            closeModalBtn.addEventListener('click', closeModal);
            cancelMeetingBtn.addEventListener('click', closeModal);
            
            // Close modal when clicking outside
            window.addEventListener('click', function(event) {
                if (event.target === modal) {
                    closeModal();
                }
            });
            
            // Toggle location/platform fields based on meeting type
            const meetingType = document.getElementById('meeting-type');
            const locationGroup = document.getElementById('location-group');
            const platformGroup = document.getElementById('platform-group');
            
            meetingType.addEventListener('change', function() {
                if (this.value === 'in-person') {
                    locationGroup.style.display = 'block';
                    platformGroup.style.display = 'none';
                } else if (this.value === 'video') {
                    locationGroup.style.display = 'none';
                    platformGroup.style.display = 'block';
                } else {
                    locationGroup.style.display = 'none';
                    platformGroup.style.display = 'none';
                }
            });
            
            // Form submission
            const createMeetingForm = document.getElementById('create-meeting-form');
            
            scheduleMeetingBtn.addEventListener('click', function() {
                if (createMeetingForm.checkValidity()) {
                    // In a real implementation, this would submit the form data
                    // For this demo, just close the modal
                    alert('Meeting scheduled successfully!');
                    closeModal();
                    
                    // Switch to the Upcoming Meetings tab
                    document.querySelector('.tab[data-tab="upcoming"]').click();
                } else {
                    // Trigger browser's default validation UI
                    createMeetingForm.reportValidity();
                }
            });
        });
    </script>
